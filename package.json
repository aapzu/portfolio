{
	"name": "@aapzu/portfolio",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev",
		"build": "svelte-kit build",
		"package": "svelte-kit package",
		"preview": "svelte-kit preview",
		"prepare": "husky install",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"eslint": "eslint .",
		"eslint:fix": "eslint . --fix",
		"prettier": "prettier --check --plugin-search-dir=. .",
		"prettier:fix": "prettier --write --plugin-search-dir=. .",
		"tsc": "tsc --noEmit"
	},
	"devDependencies": {
		"@fontsource/fira-mono": "4.5.0",
		"@fontsource/roboto-mono": "4.5.7",
		"@sveltejs/adapter-auto": "1.0.0-next.53",
		"@sveltejs/kit": "1.0.0-next.560",
		"@types/cookie": "0.5.1",
		"@typescript-eslint/eslint-plugin": "5.27.0",
		"@typescript-eslint/parser": "5.27.0",
		"classnames": "2.3.1",
		"cookie": "0.4.1",
		"eslint": "8.16.0",
		"eslint-config-prettier": "8.3.0",
		"eslint-plugin-svelte3": "4.0.0",
		"husky": "8.0.1",
		"lint-staged": "13.0.3",
		"node-sass": "7.0.1",
		"prettier": "2.6.2",
		"prettier-plugin-svelte": "2.7.0",
		"sass": "1.53.0",
		"svelte": "3.49.0",
		"svelte-check": "2.7.1",
		"svelte-preprocess": "4.10.6",
		"tslib": "2.3.1",
		"typescript": "4.7.2",
		"vite": "^5.0.10"
	},
	"type": "module",
	"lint-staged": {
		"*.{js,ts,svelte,yml,json,html,scss,css,txt,md}": "npm run prettier:fix",
		"*.ts": [
			"npm run check",
			"npm run eslint:fix"
		],
		"*.svelte": "npm run eslint:fix"
	},
	"engines": {
		"node": "18.x",
		"npm": "9.x"
	}
}
